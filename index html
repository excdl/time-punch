<!DOCTYPE html>
<html lang="zh-TW">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>奇可智能打卡系統</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
<style>
  body { font-family:'Arial',sans-serif; background:#f4f4f9; display:flex; flex-direction:column; align-items:center; padding:20px;}
  h3 { color:#2c3e50; margin-bottom:10px;}
  #status { margin:10px 0; text-align:center; font-size:18px;}
  button { padding:15px 30px; font-size:18px; border:none; border-radius:10px; cursor:pointer; margin-top:15px;}
  .onTime { color:#4CAF50; font-weight:bold;}
  .late { color:#e67e22; font-weight:bold;}
  .absent { color:#e74c3c; font-weight:bold;}
</style>
</head>
<body>
<h3>奇可智能打卡系統</h3>
<div id="status">載入中...</div>
<button id="clockInBtn">一鍵打卡</button>

<script>
const API_ENDPOINT = "https://script.google.com/macros/s/AKfycbyFCHGJlP4HI3l9lQ0GkzUP-e_5rynP7GMu5iSI9QDy6laOYUFTnvPJ00-qhUuOcGw/exec";
const COMPANY_IPS = ["114.34.60.48","220.132.124.179","125.228.248.110","114.34.128.159","220.134.230.241"];
let userIp = "";

async function getUserIP() {
  try {
    const res = await fetch("https://api.ipify.org?format=json");
    const data = await res.json();
    return data.ip;
  } catch {
    return "無法取得IP";
  }
}

async function updateStatus() {
  const userId = liff.getContext().userId;
  const today = new Date().toLocaleDateString("zh-TW").replace(/\//g,'/');
  
  const res = await fetch(API_ENDPOINT);
  const sheetData = await res.json(); // 你可以建立 GET API 回傳今天資料
  let row = sheetData.find(r => r[0] === today && r[1] === userId);
  
  if(!row){
    document.getElementById("status").innerHTML = `<span class="absent">今日尚未打卡</span>`;
    return;
  }
  
  let text = "";
  if(row[2]){
    text += `上班: <span class="${COMPANY_IPS.includes(row[3].replace(/ \(.*\)/,''))?'onTime':'late'}">${new Date(row[2]).toLocaleTimeString()}${row[3].includes('閒置')?' ⚠異地':''}</span><br>`;
  } else {
    text += `上班: <span class="absent">尚未打卡</span><br>`;
  }
  
  if(row[4]){
    text += `下班: <span class="${COMPANY_IPS.includes(row[5].replace(/ \(.*\)/,''))?'onTime':'late'}">${new Date(row[4]).toLocaleTimeString()}${row[5].includes('閒置')?' ⚠異地':''}</span>`;
  } else {
    text += `下班: <span class="absent">尚未打卡</span>`;
  }
  
  document.getElementById("status").innerHTML = text;
}

async function clockIn() {
  userIp = await getUserIP();
  const userId = liff.getContext().userId;
  
  const res = await fetch(API_ENDPOINT, {
    method:"POST",
    body: JSON.stringify({userId,userIp})
  });
  
  const data = await res.json();
  
  if(data.message.includes("成功")){
    let msg = `${data.action}打卡成功!`;
    if(!COMPANY_IPS.includes(userIp)) msg += " ⚠ 異地打卡";
    Swal.fire({icon:"success", title:msg, timer:2500, showConfirmButton:false});
    updateStatus();
  } else {
    Swal.fire({icon:"warning", title:data.message});
  }
}

// LIFF 初始化
liff.init({liffId:"2008493252-eAMXGMPd"}).then(() => {
  updateStatus();
});

document.getElementById("clockInBtn").addEventListener("click", clockIn);
</script>
</body>
</html>
