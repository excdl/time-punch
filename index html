<!DOCTYPE html>
<html lang="zh-TW">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>奇可智能打卡系統</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>

<style>
  body { font-family:'Arial',sans-serif; background:#f4f4f9; display:flex; flex-direction:column; align-items:center; padding:20px;}
  h3 { color:#2c3e50; margin-bottom:10px;}
  #status { margin:10px 0; text-align:center; font-size:18px;}
  button { padding:15px 30px; font-size:18px; border:none; border-radius:10px; cursor:pointer; margin-top:15px; background:#3498db; color:white;}
  .onTime { color:#27ae60; font-weight:bold;}
  .late { color:#e67e22; font-weight:bold;}
  .absent { color:#c0392b; font-weight:bold;}
</style>
</head>

<body>
<h3>奇可智能打卡系統</h3>
<div id="status">載入中...</div>
<button id="clockInBtn">一鍵打卡</button>

<script>
// ========== 參數設定 ==========
const API_ENDPOINT = "https://script.google.com/macros/s/AKfycbyAZjq0ww8Zv542pypZqQqRckxlCjgRewsHmwnG2y32MCL7wBUC9e1m069XSh8XIDa7/exec"; // ← 要改
const COMPANY_IPS = ["114.34.60.48","220.132.124.179","125.228.248.110","114.34.128.159","220.134.230.241"];

let userIp = "";

// ========== 取得使用者 IP ==========
async function getUserIP() {
  try {
    const res = await fetch("https://api.ipify.org?format=json");
    const data = await res.json();
    return data.ip;
  } catch {
    return "無法取得IP";
  }
}

// ========== 更新畫面 ==========
async function updateStatus() {
  const userId = liff.getContext().userId;
  const today = new Date().toLocaleDateString("zh-TW");

  const res = await fetch(API_ENDPOINT);
  const sheetData = await res.json();

  const row = sheetData.find(r => r[0] === today && r[1] === userId);

  if (!row) {
    document.getElementById("status").innerHTML =
      `<span class="absent">今日尚未打卡</span>`;
    return;
  }

  let html = "";

  // 上班
  if (row[2]) {
    const isCompany = COMPANY_IPS.includes(row[3].replace("（異地）",""));
    html += `上班：<span class="${isCompany ? "onTime" : "late"}">
      ${new Date(row[2]).toLocaleTimeString()} ${row[3].includes("異地") ? "⚠" : ""}
    </span><br>`;
  } else {
    html += `上班：<span class="absent">尚未打卡</span><br>`;
  }

  // 下班
  if (row[4]) {
    const isCompany = COMPANY_IPS.includes(row[5].replace("（異地）",""));
    html += `下班：<span class="${isCompany ? "onTime" : "late"}">
      ${new Date(row[4]).toLocaleTimeString()} ${row[5].includes("異地") ? "⚠" : ""}
    </span>`;
  } else {
    html += `下班：<span class="absent">尚未打卡</span>`;
  }

  document.getElementById("status").innerHTML = html;
}

// ========== 按下打卡 ==========
async function clockIn() {
  userIp = await getUserIP();
  const userId = liff.getContext().userId;

  const res = await fetch(API_ENDPOINT, {
    method: "POST",
    body: JSON.stringify({ userId, userIp })
  });

  const data = await res.json();

  if (data.message.includes("成功")) {
    Swal.fire({
      icon: "success",
      title: `${data.action}打卡成功！${data.ip.includes("異地") ? " ⚠異地" : ""}`,
      timer: 2000,
      showConfirmButton: false
    });
    updateStatus();
  } else {
    Swal.fire({ icon: "warning", title: data.message });
  }
}

// ========== 初始化 LIFF ==========
liff.init({ liffId: "2008493252-eAMXGMPd" }).then(updateStatus);

// ========== 綁定按鈕 ==========
document.getElementById("clockInBtn").addEventListener("click", clockIn);
</script>

</body>
</html>

